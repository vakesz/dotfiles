#!/bin/bash
# A simple script to display system information

# Text colors
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
BOLD='\033[1m'
NC='\033[0m' # No Color

clear

# Header
echo -e "${BOLD}${BLUE}=== System Information ===${NC}\n"

# Hostname and date
echo -e "${BOLD}Hostname:${NC} $(hostname)"
echo -e "${BOLD}Date:${NC} $(date)"
echo -e "${BOLD}Uptime:${NC} $(uptime -p)"
echo ""

# OS info
echo -e "${BOLD}${BLUE}=== OS Information ===${NC}"
echo -e "${BOLD}OS:${NC} $(lsb_release -ds 2>/dev/null || cat /etc/*release 2>/dev/null | head -n1 || uname -om)"
echo -e "${BOLD}Kernel:${NC} $(uname -r)"
echo ""

# CPU info
echo -e "${BOLD}${BLUE}=== CPU Information ===${NC}"
echo -e "${BOLD}CPU:${NC} $(grep 'model name' /proc/cpuinfo | head -1 | cut -d':' -f2 | xargs)"
echo -e "${BOLD}CPU Cores:${NC} $(grep -c '^processor' /proc/cpuinfo)"
echo -e "${BOLD}CPU Usage:${NC} $(top -bn1 | grep "Cpu(s)" | awk '{print $2 + $4}')%"
echo ""

# Memory info
echo -e "${BOLD}${BLUE}=== Memory Information ===${NC}"
echo -e "${BOLD}Memory:${NC} $(free -h | awk '/^Mem:/ {print $3 " / " $2}')"
echo -e "${BOLD}Swap:${NC} $(free -h | awk '/^Swap:/ {print $3 " / " $2}')"
echo ""

# Disk info
echo -e "${BOLD}${BLUE}=== Disk Usage ===${NC}"
df -h | grep -v "tmpfs\|loop" | awk 'BEGIN {print "Filesystem\tSize\tUsed\tAvail\tUse%\tMounted on"} NR>1 {print $1 "\t" $2 "\t" $3 "\t" $4 "\t" $5 "\t" $6}'
echo ""

# Network info
echo -e "${BOLD}${BLUE}=== Network Information ===${NC}"
echo -e "${BOLD}IP Address:${NC} $(hostname -I | awk '{print $1}')"
echo -e "${BOLD}Public IP:${NC} $(curl -s https://ipinfo.io/ip || echo "Could not determine")"
echo ""

# Current logged in users
echo -e "${BOLD}${BLUE}=== Current Users ===${NC}"
who
echo ""

# Top 5 processes by CPU usage
echo -e "${BOLD}${BLUE}=== Top 5 CPU Processes ===${NC}"
ps aux --sort=-%cpu | head -6
echo ""

# Top 5 processes by memory usage
echo -e "${BOLD}${BLUE}=== Top 5 Memory Processes ===${NC}"
ps aux --sort=-%mem | head -6