{
  "description": "Cross-platform package mapping for dotfiles setup",
  "packages": {
    "core": [
      {
        "name": "git",
        "brew": "git",
        "apt": "git",
        "description": "Version control system"
      },
      {
        "name": "curl",
        "brew": "curl",
        "apt": "curl",
        "description": "Data transfer tool"
      },
      {
        "name": "wget",
        "brew": "wget",
        "apt": "wget",
        "description": "Network downloader"
      },
      {
        "name": "stow",
        "brew": "stow",
        "apt": "stow",
        "description": "Symlink farm manager"
      },
      {
        "name": "jq",
        "brew": "jq",
        "apt": "jq",
        "description": "JSON processor"
      }
    ],
    "toolchains": [
      {
        "name": "rust",
        "brew": null,
        "apt": null,
        "install_script": "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --no-modify-path",
        "description": "Rust programming language and cargo package manager (required for cargo packages) - installed via rustup"
      },
      {
        "name": "node",
        "brew": null,
        "apt": null,
        "install_script": "curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.1/install.sh | bash",
        "description": "Node.js runtime and npm package manager (required for npm packages) - installed via nvm"
      },
      {
        "name": "go",
        "brew": "go",
        "apt": "golang-go",
        "description": "Go programming language (required for go install packages)"
      },
      {
        "name": "python",
        "brew": "python@3.13",
        "apt": "python3 python3-pip pipx",
        "description": "Python programming language (required for pip/pipx packages)"
      }
    ],
    "shell": [
      {
        "name": "zsh",
        "brew": "zsh",
        "apt": "zsh",
        "description": "Z shell"
      },
      {
        "name": "tmux",
        "brew": "tmux",
        "apt": "tmux",
        "description": "Terminal multiplexer"
      },
      {
        "name": "fzf",
        "brew": "fzf",
        "apt": "fzf",
        "description": "Fuzzy finder"
      },
      {
        "name": "ripgrep",
        "brew": "ripgrep",
        "apt": "ripgrep",
        "description": "Fast grep alternative"
      },
      {
        "name": "fd",
        "brew": "fd",
        "apt": "fd-find",
        "description": "Fast find alternative"
      },
      {
        "name": "bat",
        "brew": "bat",
        "apt": "bat",
        "description": "Cat with syntax highlighting"
      },
      {
        "name": "tldr",
        "brew": "tealdeer",
        "apt": null,
        "cargo": "tealdeer",
        "description": "Simplified man pages (tealdeer implementation)"
      },
      {
        "name": "zoxide",
        "brew": "zoxide",
        "apt": null,
        "cargo": "zoxide",
        "description": "Smart cd command"
      },
      {
        "name": "oh-my-posh",
        "brew": "oh-my-posh",
        "apt": null,
        "install_script": "curl -s https://ohmyposh.dev/install.sh | bash -s",
        "description": "Cross-platform prompt engine"
      }
    ],
    "editors": [
      {
        "name": "neovim",
        "brew": "neovim",
        "apt": "neovim",
        "description": "Hyperextensible Vim-based text editor"
      },
      {
        "name": "shellcheck",
        "brew": "shellcheck",
        "apt": "shellcheck",
        "description": "Shell script analyzer"
      }
    ],
    "terminal": [
      {
        "name": "alacritty",
        "brew": "--cask alacritty",
        "apt": "alacritty",
        "description": "GPU-accelerated terminal emulator"
      }
    ],
    "macos-apps": [
      {
        "name": "CotEditor",
        "brew": "--cask coteditor",
        "apt": null,
        "description": "Lightweight plain-text editor for macOS"
      }
    ],
    "tools": [
      {
        "name": "tree-sitter",
        "brew": "tree-sitter",
        "apt": null,
        "npm": "tree-sitter-cli",
        "description": "Parser generator"
      },
      {
        "name": "git-delta",
        "brew": "git-delta",
        "apt": "git-delta",
        "description": "Better git diff viewer"
      },
      {
        "name": "tig",
        "brew": "tig",
        "apt": "tig",
        "description": "Text-mode git interface"
      },
      {
        "name": "httpie",
        "brew": "httpie",
        "apt": "httpie",
        "description": "HTTP client"
      },
      {
        "name": "pre-commit",
        "brew": "pre-commit",
        "apt": null,
        "pip": "pre-commit",
        "description": "Git pre-commit framework"
      },
      {
        "name": "topgrade",
        "brew": "topgrade",
        "apt": null,
        "cargo": "topgrade",
        "description": "Universal system upgrade tool"
      },
      {
        "name": "cargo-update",
        "brew": null,
        "apt": null,
        "cargo": "cargo-update",
        "description": "Cargo subcommand to check and update installed binaries"
      },
      {
        "name": "cargo-cache",
        "brew": null,
        "apt": null,
        "cargo": "cargo-cache",
        "description": "Cargo subcommand to inspect and clean the cargo cache"
      },
      {
        "name": "glow",
        "brew": "glow",
        "apt": null,
        "description": "Render markdown in terminal"
      },
      {
        "name": "goimports",
        "brew": "goimports",
        "apt": null,
        "install_script": "go install golang.org/x/tools/cmd/goimports@latest",
        "description": "Go imports formatter (gofmt is included with go)"
      }
    ],
    "containers": [
      {
        "name": "colima",
        "brew": "colima",
        "apt": null,
        "description": "Container runtime for macOS (not needed on Linux)"
      },
      {
        "name": "docker",
        "brew": "docker",
        "apt": "docker.io",
        "description": "Docker CLI and engine"
      },
      {
        "name": "docker-compose",
        "brew": "docker-compose",
        "apt": "docker-compose",
        "description": "Multi-container orchestration"
      },
      {
        "name": "docker-buildx",
        "brew": "docker-buildx",
        "apt": "docker-buildx",
        "description": "Docker build plugin"
      },
      {
        "name": "docker-completion",
        "brew": "docker-completion",
        "apt": "bash-completion",
        "description": "Docker shell completion"
      }
    ],
    "build": [
      {
        "name": "cmake",
        "brew": "cmake",
        "apt": "cmake",
        "description": "Cross-platform build system"
      },
      {
        "name": "make",
        "brew": "make",
        "apt": "build-essential",
        "description": "Build automation tool"
      },
      {
        "name": "gcc",
        "brew": "gcc",
        "apt": "gcc",
        "description": "GNU Compiler Collection"
      }
    ],
    "formatters": [
      {
        "name": "prettier",
        "brew": "prettier",
        "apt": null,
        "npm": "prettier",
        "description": "Code formatter"
      },
      {
        "name": "stylua",
        "brew": "stylua",
        "apt": null,
        "cargo": "stylua",
        "description": "Lua formatter"
      },
      {
        "name": "ruff",
        "brew": "ruff",
        "apt": null,
        "pip": "ruff",
        "description": "Python linter and formatter"
      },
      {
        "name": "swift-format",
        "brew": "swift-format",
        "apt": null,
        "description": "Swift formatter"
      },
      {
        "name": "clang-format",
        "brew": "clang-format",
        "apt": "clang-format",
        "description": "C/C++/Objective-C formatter"
      }
    ]
  }
}
