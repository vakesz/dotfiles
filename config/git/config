[user]
	name = Gabor Pinkova
	email = vakesz@users.noreply.github.com
	username = vakesz

[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = $XDG_CONFIG_HOME/git/ignore

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[branch]
	autosetupmerge = simple

[alias]
	# Sync current branch from upstream to your fork (origin)
	sync-fork = "!sh -c '\
		branch=$(git symbolic-ref --short HEAD) && \
		git fetch upstream && \
		git merge --ff-only upstream/$branch && \
		git push origin $branch \
		'"
	sf = sync-fork
	lol = log --graph --oneline --decorate --all

[diff]
	external = difft
	tool = difftastic
	colorMoved = default

[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"

[pager]
	difftool = true

[merge]
	tool = kdiff3
	conflictstyle = diff3

[mergetool]
	keepBackup = false

[mergetool "kdiff3"]
	trustExitCode = true

[credential]
	# Git Credential Manager (cross-platform): brew install git-credential-manager
	helper = git-credential-manager

[color]
	ui = auto

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
