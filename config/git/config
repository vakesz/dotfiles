[user]
	name = Gabor Pinkova
	email = vakesz@users.noreply.github.com
	username = vakesz

[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.config/git/ignore

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[init]
	defaultBranch = main

[branch]
	autosetupmerge = simple

[alias]
	# Sync current branch from upstream to your fork (origin)
	sync-fork = "!sh -c '\
		branch=$(git symbolic-ref --short HEAD) && \
		git fetch upstream && \
		git merge --ff-only upstream/$branch && \
		git push origin $branch \
		'"
	sf = sync-fork
	lol = log --graph --oneline --decorate --all

[pager]
	difftool = true

[credential]
	# Git Credential Manager (cross-platform): brew install git-credential-manager
	helper = manager

[diff]
	algorithm = histogram
	colorMoved = default

[merge]
	conflictstyle = zdiff3

[rebase]
	autosquash = true
	autostash = true

[rerere]
	enabled = true
	autoupdate = true

[fetch]
	prune = true
	pruneTags = true

[color]
	ui = auto

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
