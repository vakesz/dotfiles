[core]
	editor     = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	repositoryformatversion = 0
	bare       = false

[pull]
	rebase = true

[push]
    default = current
    autoSetupRemote = true

[branch]
    autosetupmerge = simple

[alias]    
    # Sync current branch from upstream to your fork (origin)
    sync-fork = "!sh -c '\
        branch=$(git symbolic-ref --short HEAD) && \
        git fetch upstream && \
        git merge --ff-only upstream/$branch && \
        git push origin $branch \
        '"
    # Optional shorthand
    sf = sync-fork
	lol = log --graph --oneline --decorate --all
	
[diff]
	tool = vimdiff

[difftool]
	prompt = false

[credential]
	helper = store

[color]
	ui = auto

[color "branch"]
	current = yellow bold
	local   = green  bold
	remote  = cyan   bold

[color "diff"]
	meta       = yellow bold
	frag       = magenta bold
	old        = red     bold
	new        = green   bold
	whitespace = red     reverse

[color "status"]
	added     = green  bold
	changed   = yellow bold
	untracked = red    bold